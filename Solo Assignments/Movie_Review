# I will be making a movie class of movie reviews
class movie: 
    def __init__(self, Title, box_office, rating, genre):
        self.title = Title
        self.box_office = box_office
        self.rating = rating
        self.genre = genre
    
    def get_summary(self):
        title = self.title
        reviews = []
        box_office = self.box_office
        average_rating = sum(self.rating) / len(self.rating)
        genre = self.genre
            
class Review:
    def __init__(self, rating):
        self.rating = rating

reviews = [Review(7), Review(9), Review(5)]

total = 0
for r in reviews:
    total += r.rating
    average_rating = total / len(reviews)
